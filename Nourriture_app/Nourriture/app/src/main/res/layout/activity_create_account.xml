<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nourriture.teambjtu.com.nourriture.CreateAccountActivity"
    android:id="@+id/Nourriture">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/FirstNameEditText"
        android:ems="10"
        android:id="@+id/FirstNameEditText"
        android:textColor="#ff808080"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/LastNameEditText"
        android:ems="10"
        android:id="@+id/LastNameEditText"
        android:textColor="#ff808080"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailEditText"
        android:text="@string/EmailEditText"
        android:textColor="#ff808080"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignRight="@+id/LastNameEditText"
        android:layout_alignEnd="@+id/LastNameEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserNameEditText"
        android:text="@string/UsernameEditText"
        android:textColor="#ff808080"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignRight="@+id/EmailEditText"
        android:layout_alignEnd="@+id/EmailEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordEditText"
        android:text="@string/PasswordEditText"
        android:textColor="#ff808080"
        android:layout_above="@+id/RetypePassTextView"
        android:layout_alignLeft="@+id/PasswordTextView"
        android:layout_alignStart="@+id/PasswordTextView"
        android:layout_alignRight="@+id/UserNameEditText"
        android:layout_alignEnd="@+id/UserNameEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/RetypePasswordEditText"
        android:text="@string/RetypePasswordEditText"
        android:layout_above="@+id/RegisterButton"
        android:layout_alignLeft="@+id/PasswordEditText"
        android:layout_alignStart="@+id/PasswordEditText"
        android:layout_marginBottom="37dp"
        android:layout_alignRight="@+id/PasswordEditText"
        android:layout_alignEnd="@+id/PasswordEditText"
        android:textColor="#ff808080" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RegisterButton"
        android:id="@+id/RegisterButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/RetypePasswordEditText"
        android:layout_alignStart="@+id/RetypePasswordEditText"
        android:layout_alignRight="@+id/RetypePasswordEditText"
        android:layout_alignEnd="@+id/RetypePasswordEditText"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/PasswordTextView"
        android:id="@+id/PasswordTextView"
        android:textColor="#ff000000"
        android:layout_above="@+id/PasswordEditText"
        android:layout_alignLeft="@+id/UserNameEditText"
        android:layout_alignStart="@+id/UserNameEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/RetypePasswordTextView"
        android:id="@+id/RetypePassTextView"
        android:textColor="#ff000000"
        android:layout_above="@+id/RetypePasswordEditText"
        android:layout_alignLeft="@+id/RetypePasswordEditText"
        android:layout_alignStart="@+id/RetypePasswordEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/FirstNameTextView"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/FirstNameEditText"
        android:layout_alignStart="@+id/FirstNameEditText"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/LastNameTextView"
        android:id="@+id/textView2"
        android:textColor="#ff000000"
        android:layout_below="@+id/FirstNameEditText"
        android:layout_alignLeft="@+id/FirstNameEditText"
        android:layout_alignStart="@+id/FirstNameEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/EmailTextView"
        android:id="@+id/textView5"
        android:textColor="#ff000000"
        android:layout_below="@+id/LastNameEditText"
        android:layout_alignLeft="@+id/LastNameEditText"
        android:layout_alignStart="@+id/LastNameEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/UsernameTextView"
        android:id="@+id/textView6"
        android:textColor="#ff000000"
        android:layout_below="@+id/EmailEditText"
        android:layout_alignLeft="@+id/EmailEditText"
        android:layout_alignStart="@+id/EmailEditText" />

</RelativeLayout>
